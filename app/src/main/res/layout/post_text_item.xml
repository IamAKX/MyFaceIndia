<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:elevation="25dp" android:layout_margin="10dp" android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postItemTextView"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_below="@+id/postItemTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/postItemTextDateTime"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posted on : "
            android:layout_marginRight="20dp"
            android:gravity="right"/>
    </LinearLayout>
</RelativeLayout>