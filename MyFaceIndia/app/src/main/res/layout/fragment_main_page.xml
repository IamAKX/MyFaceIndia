<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/themeBackground"
    tools:context="com.akash.applications.myfaceindia.MainPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="16dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#ffffff"
            android:background="@drawable/customized_border">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/userprofilepic"
                    android:layout_width="35dp"
                    android:backgroundTint="#ffffff"
                    android:background="@drawable/customized_border"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#cdcdcd"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="What's on your mind?"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textStyle="italic"
                android:layout_marginLeft="1dp"
                android:background="#FFFFFF"
                android:layout_marginRight="1dp"
                android:inputType="textLongMessage"
                android:gravity="start"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#cdcdcd"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="@color/colorAccent"
                    android:src="@android:drawable/ic_menu_camera"
                    />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="@color/colorAccent"
                    android:src="@android:drawable/ic_menu_gallery"
                    />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="25dp"
                    android:tint="@color/colorAccent"
                    android:layout_height="25dp"
                    android:src="@drawable/link"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/publicbtn"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxHeight="25dp"
                        android:text="POST"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:background="@drawable/customized_border"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
